@model ConfirmMailViewModel
@{
    Layout = null;
}


<link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />


<div class="container">
    <br />
    <br />
    <form method="post">
        <h2>Mail Address : @ViewBag.v</h2>
        <br />
        <label>User Id</label>
        <input type="text" class="form-control" asp-for="Mail" value="@ViewBag.v" />
        <br />
        <label>Enter the code received in your mail adress</label>
        <input type="text" class="form-control" asp-for="ConfirmCode" />
        <br />
        <button class="btn btn-primary">Activate your account </button>
    </form>
</div>

